@import 'fonts'

$green = #26A48B
$green_alt = #78F7DE
$green_alt2 = #E2FDF9
$blue = #00B1FF
$blue_alt = #7AD1F7
$blue_alt2 = #E3F7FF
$pink = #9E558B
$pink_alt = #FD649C
$red = #FC565F
$red_alt = #FFE5E6
$white = #FFF
$black = #171717
$black_alt = #4E4E4E
$black_alt2 = #5f6466
$gray = #91939B
$gray_alt = #ABADB9
$border = #DEDEDE
$border_alt = #EDEEF0
$border_alt2 = #9C9EAA
$border_alt3 = #A0A0A0

image_default =
    height: auto
    vertical-align: middle
    object-fit: cover
    -webkit-user-drag: none

html
    -webkit-text-size-adjust: none

*,
*:before,
*:after
    user-select: none
    box-sizing: border-box
    margin: 0

body
    overflow-x: hidden
    &.no_click
        pointer-events: none
    &.no_scroll
        overflow-y: hidden

input,
input:before,
input:after,
textarea,
textarea:before,
textarea:after,
select,
select:before,
select:after
    user-select: initial

h1,
h2,
h3,
h4,
h5
    font-weight: normal

table
    width: 100%
    border-collapse: collapse

img
    width: 100%
    {image_default}
    transition: .3s ease-in-out

a
    text-decoration: none

/**
 * Default Buttons */
.default_btn
    width: auto
    brandon_bold(16px)
    color: $white
    text-transform: uppercase
    letter-spacing: .5px
    padding: 15px 45px
    background-image: linear-gradient(25deg, $green 0%, $green_alt 100%)
    box-shadow: 0px 0px 30px transparent
    transition: .3s ease-in-out
    &:hover
        box-shadow: 0px 0px 30px rgba(38, 164, 139, 0.75)
        transition: .3s ease-in-out

#main_container
    position: relative
    /**
     * Navbar Side */
    #header
        display: flex
        flex-flow: row wrap
        align-items: center
        position: fixed
        z-index: 3
        width: 100%
        background-color: transparent
        border-bottom: 0.5px solid $border_alt3
        transition: .2s linear
        &.sticky
            background-color: $white
            .navbar
                padding: 10px 30px
                transition: .2s linear
                .logo
                    .logo_title
                        color: $black
                        transition: .3s ease-in-out
                .nav_list
                    li
                        .nav_item
                            color: $black_alt
                            transition: .3s ease-in-out
                            &::before
                                content: ''
                                position: absolute
                                top: 100%
                                left: 0
                                width: 0
                                height: 3px
                                z-index: 1
                                background-image: linear-gradient(25deg, $pink 0%, $pink_alt 100%)
                                opacity: 0
                                transition: .3s ease-in-out .3s
                            &::after
                                content: ''
                                position: absolute
                                top: 100%
                                left: calc(100% - 20px)
                                width: 0
                                height: 3px
                                z-index: 1
                                background-image: linear-gradient(25deg, $pink 0%, $pink_alt 100%)
                                opacity: 0
                                transition: .3s ease-in-out .05s
                            &:hover
                                color: $pink_alt
                                text-shadow: 0px 0px 30px rgba(253, 100, 156, 0.75)
                                transition: .3s ease-in-out .3s
                                &::before
                                    width: calc(100% - 30px)
                                    opacity: 1
                                    transition: .3s ease-in-out .05s
                                &::after
                                    width: 20px
                                    opacity: 1
                                    transition: .3s ease-in-out .3s
        .navbar
            display: flex
            flex-flow: row wrap
            align-items: center
            justify-content: space-between
            flex: 0 0 95%
            border-right: 0.5px solid $border_alt3
            padding: 15px 30px
            transition: .2s linear
            .logo
                text-decoration: none
                display: flex
                flex-flow: row wrap
                align-items: center
                justify-content: flex-start
                transition: .3s ease-in-out
                img
                    width: 45px
                    {image_default}
                .logo_title
                    neutra_bold(22px)
                    line-height: 1.25
                    color: $white
                    letter-spacing: 5px
                    padding-left: 20px
                    text-transform: uppercase
                    transition: .3s ease-in-out
            .nav_list
                list-style: none
                padding: 0
                margin: 0
                display: flex
                flex-flow: row wrap
                align-items: center
                li
                    margin: 0 30px
                    .nav_item
                        position: relative
                        brandon_bold(16px)
                        color: $white
                        text-transform: uppercase
                        letter-spacing: .5px
                        transition: .3s ease-in-out
                        &::before
                            content: ''
                            position: absolute
                            top: 100%
                            left: 0
                            width: 0
                            height: 3px
                            z-index: 1
                            background-image: linear-gradient(25deg, $green 0%, $green_alt 100%)
                            opacity: 0
                            transition: .3s ease-in-out .3s
                        &::after
                            content: ''
                            position: absolute
                            top: 100%
                            left: calc(100% - 20px)
                            width: 0
                            height: 3px
                            z-index: 1
                            background-image: linear-gradient(25deg, $green 0%, $green_alt 100%)
                            opacity: 0
                            transition: .3s ease-in-out .05s
                        &:hover
                            color: $green_alt
                            text-shadow: 0px 0px 30px rgba(38, 164, 139, 0.75)
                            transition: .3s ease-in-out .3s
                            &::before
                                width: calc(100% - 30px)
                                opacity: 1
                                transition: .3s ease-in-out .05s
                            &::after
                                width: 20px
                                opacity: 1
                                transition: .3s ease-in-out .3s
        .nav_burger
            flex: 1 0 auto
            margin: 0 22px
            position: relative
            cursor: pointer
            .bar
                width: 100%
                background-color: $white
                height: 2px
                margin-bottom: 7.5px
                &.bottom_line
                    width: calc(100% - 20px)
                    margin-bottom: 0
            .excess_line
                position: absolute
                bottom: 0
                right: 0
                width: 10px
                height: 2px
                background-color: $white

/**
 * Default Loader **/
.loader_wrapper
    position: fixed
    z-index: 999
    .background
        position: fixed
        top: 0
        left: 0
        width: 100%
        height: 100%
        z-index: 2
        background-color: rgba(0, 0, 0, 0.5)
    .wrapper
        display: flex
        align-items: center
        position: fixed
        top: 50%
        left: 50%
        z-index: 3
        text-align: center
        background-image: linear-gradient(to right, $red, $orange)
        box-shadow: 0px 10px 25px rgba(0,0,0,0.15)
        padding: 0 40px
        border-radius: 5px
        transform: translate(-50%, -50%)
        .loader
            display: inline-block
            position: relative
            width: 64px
            height: 64px
            div
                display: inline-block
                position: absolute
                left: 6px
                width: 13px
                background-color: $white
                animation: loader 1.2s cubic-bezier(0, 0.5, 0.5, 1) infinite
                &:nth-child(1)
                    left: 6px
                    animation-delay: -0.20s
                &:nth-child(2)
                    left: 26px
                    animation-delay: -0.10s
                &:nth-child(3)
                    left: 45px
                    animation-delay: 0
        .loader_text
            sf_pro_regular(18px)
            color: $white
            margin-left: 10px
/**
 * Animation */
.fade-enter-active,
.fade-leave-active
    transition: all .3s ease-in-out

.fade-enter,
.fade-leave-to
    opacity: 0

.page-enter-active,
.page-leave-active
    transition: all .3s ease-in-out

.page-enter,
.page-leave-to
    transform: translateY(100px)
    opacity: 0

.slide-enter-active,
.slide-leave-active
    transition: all .3s ease-in-out

.slide-enter,
.slide-leave-to
    opacity: 0
    transform: translateY(-20px)

.fade_in
    animation: fade_in .3s

.fade_out
    animation: fade_out .3s

.slide_in
    animation: slide_in .3s

.slide_up
    animation: slide_up .3s

@keyframes fade_in
	from {
		opacity: 0
    }
	to {
		opacity: 1
    }

@keyframes fade_out
	from {
		opacity: 1
    }
	to {
		opacity: 0
    }

@keyframes slide_in
	from {
		opacity: 0
        transform: translateX(100px)
    }
	to {
		opacity: 1
        transform: translateX(0px)
    }

@keyframes slide_up
	from {
		opacity: 0
        transform: translateY(-100px)
    }
	to {
		opacity: 1
        transform: translateY(0px)
    }

@keyframes loader
    0% {
        top: 6px
        height: 51px
    }
    50%, 100% {
        top: 19px
        height: 26px
    }
