@import 'fonts'

@media (max-width: 767px) and (min-width: 320px)

    .default_btn,
    .default_btn_out
        width: 100%
        brandon_bold(14px, true)
        padding: 12px 10px

    .form_group
        margin-bottom: 20px
        .validation_errors
            brandon_medium(14px, false)

    .form_flex
        .form_group
            flex: 0 0 100%
            margin-bottom: 20px

    .form_radio
        label
            brandon_regular(16px, false)
            margin-left: 10px

    .input_text
        brandon_regular(16px, false)
        &.alt
            brandon_regular(16px, true)

    .form_disclaimer
        brandon_regular(14px, false)

    .default_modal
        #default_form
            &.overlay
                &.alt,
                &.alt_2
                    max-width: calc(100% - 30px)
            .modal_wrapper
                .form_title
                    brandon_bold(22px, false)
                    padding: 40px 20px 30px
                .modal_main_group
                    padding: 0 20px 20px
                    .form_custom_checkbox
                        .custom_checkbox
                            padding: 20px 40px 20px 20px
                            label
                                brandon_bold(18px, false)
                            .info
                                p
                                    brandon_medium(12px, false)
                            #check
                                right: calc(0% + 10px)
                    .form_toggler
                        .form_flex
                            margin-bottom: 0
        .confirmation_wrapper
            max-width: calc(100% - 30px)
            padding: 40px 20px 30px
            .confirmation_highlight
                brandon_bold(22px, false)
                margin-top: 20px
            .confirmation_text
                brandon_regular(16px, false)
            .member_info
                margin-top: 20px
                h2
                    brandon_bold(25px, false)
            .button_group
                margin-top: 30px
                &.alt
                    .flex
                        flex: 0 0 100%
                .flex
                    flex: 0 0 48.33%

    #main_container
        #header
            &.not_front
                .navbar
                    padding: 10px
            .navbar
                flex: 1 0 70%
                .logo
                    img
                        width: 30px
                    .logo_title
                        neutra_bold(14px, true)
                        padding-left: 10px
            .nav_burger
                flex: 0 0 50px
                margin: 0 10px
        #pro_tip
            top: calc(0% + 61px)
            padding: 5px 15px
            .tip
                brandon_regular_italic(14px, false)

    .book_a_bike
        #banner
            margin-top: 61px
        &.landing
            #content
                .right
                    flex: 0 0 100%
                    padding: 0
                    .date_navigator
                        background-image: url('/dotted-bg.png')
                        .date
                            flex: 0 0 calc(100% / 5)
                            padding: 10px 15px
                            .overlay
                                .abbr
                                    brandon_bold(14px, false)
                                    margin-bottom: 0px
                                .month
                                    letter-spacing: 0.14px
                                    brandon_bold(14px, true)
                                    margin-bottom: 5px
                                .day
                                    brandon_bold(28px, false)
                            &::before
                                border-radius: 0px
                            &.active,
                            &.hover
                                transform: scale(1)
                                border-radius: 0px
                                transition: .3s ease-in-out
                    .schedule_list
                        .header
                            margin: 10px 5px
                            text-align: center
                            span
                                brandon_regular(16px, false)
                                &.label
                                    brandon_regular_italic(16px, false)
        &.inner
            #content
                padding: 60px 0 0
                max-width: calc(100% - 20px)
                &.fish
                    padding: 0
                    margin: 30px auto
                    .main_right
                        .content
                            padding: 30px 0 20px
                &.dismiss
                    padding: 0 0 40px
                .main_left
                    .header
                        display: flex
                        flex-flow: row wrap
                        align-items: center
                        justify-content: center
                        padding: 20px 0 0
                        border-bottom: 1px solid transparent
                        h2
                            brandon_bold(20px, false)
                            &:first-child
                                padding-right: 10px
                    .content
                        ul
                            padding: 20px 0
                            li
                                brandon_regular(12px, false)
                .main_right
                    margin-left: 0
                    .content
                        padding: 30px 0 60px
                        .seat_wrapper
                            height: 350px
                            max-width: 350px
                            margin: 10px auto
                            transition: .3s ease-in-out
                            .overlay_header
                                top: calc(0% - 30px)
                                left: calc(50%)
                                width: 100%
                                h3
                                    brandon_regular(18px, false)
                                h4
                                    brandon_regular_italic(12px, false)
                                    margin: 0 0 20px
                                img
                                    width: 70px
                            .overlay_seat
                                &.left
                                    justify-content: flex-start
                                    top: calc(0% + 20px)
                                    left: 0
                                    .seat
                                        flex: 0 0 calc(50% - 15px)
                                        &:last-child,
                                        &:nth-child(2)
                                            top: calc(0px + 30px)
                                &.right
                                    justify-content: flex-end
                                    top: calc(0% + 20px)
                                    right: 0
                                    .seat
                                        flex: 0 0 calc(50% - 15px)
                                        &:first-child,
                                        &:nth-child(3)
                                            top: calc(0px + 30px)
                                &.layout_1
                                    &.bottom
                                        bottom: calc(0% + 140px)
                                    &.bottom_alt
                                        bottom: calc(0% + 85px)
                                        .seat
                                            left: 0
                                    &.bottom_alt_2
                                        bottom: calc(0% + 30px)
                                &.bottom,
                                &.bottom_alt,
                                &.bottom_alt_2
                                    .seat
                                        padding: 20px 11.5px
                                        margin: 2.5px
                                .seat
                                    margin: 3px
                                    padding: 18px 6px
                                    .seat_number
                                        brandon_bold(12px, true)
                                        bottom: 50%
                                        transform: translateY(50%)
                        .footer
                            .legends
                                ul
                                    li
                                        brandon_medium(10px, true)
                                        margin: 0 15px 0 0
                                        &:last-child
                                            margin: 0
                                        span
                                            width: 15px
                                            height: 15px
                                            margin-right: 5px
                            .actions
                                padding: 10px 0
                                margin-top: 20px
                                .next_wrapper
                                    .left,
                                    .right
                                        flex: 0 0 100%
                                    .left
                                        padding: 10px 20px
                                        justify-content: center
                                        .flex
                                            flex: 0 0 100%
                                            &.package,
                                            &.package_details
                                                margin-bottom: 15px
                                                .toggler
                                                    justify-content: center
                                    .right
                                        text-align: center
                                        margin-top: 0
                .main_left,
                .main_right
                    flex: 0 0 100%

@media (max-width: 767px) and (min-width: 425px)

    .default_btn,
    .default_btn_out
        width: auto
        padding: 12px 15px

    #main_container
        .book_a_bike
            &.inner
                #content
                    .main_right
                        .content
                            .seat_wrapper
                                max-width: 465px
                                transition: .3s ease-in-out
                                .overlay_seat
                                    &.layout_1
                                        &.bottom
                                            bottom: calc(0% + 150px)
                                        &.bottom_alt
                                            bottom: calc(0% + 95px)
                                            .seat
                                                left: 0
                                        &.bottom_alt_2
                                            bottom: calc(0% + 40px)
                                    &.bottom,
                                    &.bottom_alt,
                                    &.bottom_alt_2
                                        .seat
                                            padding: 20px 11.5px
                                            margin: 5.5px
                            .footer
                                .actions
                                    text-align: center
                                    .next_wrapper
                                        .left
                                            padding: 10px 0
                                            .flex
                                                flex: 0 0 auto
                                                &.package,
                                                &.package_details
                                                    .toggler
                                                        justify-content: space-between
                                                &.package
                                                    flex: 1 0 60%
                                                    padding-right: 10px
                                                &.package_details
                                                    flex: 1 0 auto

